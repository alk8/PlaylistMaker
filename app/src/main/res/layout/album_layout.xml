<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:theme="@style/Theme.PlaylistMaker"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/blackWhiteAlbum"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/imgPlaylist"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_noconnection"
                app:layout_constraintDimensionRatio="1" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/titlePlaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:maxLines="2"
            android:paddingStart="5dp"
            android:textColor="?attr/blackWhiteColor"
            android:textColorHint="?attr/blackWhiteColor"
            android:textSize="12sp"
            tools:hint="Имя альбома" />

        <TextView
            android:id="@+id/descriptionPlaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:paddingStart="5dp"
            android:textColor="?attr/blackWhiteColor"
            android:textColorHint="?attr/blackWhiteColor"
            android:textSize="12sp"
            tools:hint="Количество" />
    </LinearLayout>

</androidx.cardview.widget.CardView>